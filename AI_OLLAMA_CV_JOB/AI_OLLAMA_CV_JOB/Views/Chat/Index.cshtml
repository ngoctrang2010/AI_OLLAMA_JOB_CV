@model AI_OLLAMA_CV_JOB.Models.ChatModel

@{
    ViewData["Title"] = "Chat với AI";
}

<h2>Chat với AI</h2>

<form asp-action="Ask" method="post">
    <div>
        <label for="question">Câu hỏi:</label><br />
        <input type="text" id="question" name="Question" value="@Model.Question" style="width: 400px;" />
    </div>
    <button type="submit">Gửi câu hỏi</button>
</form>

<hr />

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div>
        <label for="file">Hoặc chọn file PDF CV:</label><br />
        <input type="file" id="file" name="file" accept=".pdf" />
    </div>
    <button type="submit">Gửi file PDF</button>
</form>

@if (!string.IsNullOrEmpty(Model.Answer))
{
    <div style="margin-top:20px;">
        <strong>Trả lời từ AI:</strong>
        <p>@Model.Answer</p>
    </div>
}
