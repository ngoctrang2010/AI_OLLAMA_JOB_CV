@model IEnumerable<AI_OLLAMA_CV_JOB.Models.CongViec>
@{
    ViewData["Title"] = "Trang chủ việc làm";
}

<!-- Thêm CSS cho hiệu ứng và giao diện -->
<style>
    .job-title-section {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        padding: 50px 0;
        margin-bottom: 30px;
        color: white;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .job-card {
        border-radius: 10px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.07);
        border: none;
        height: 100%;
    }

    .job-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }

    .card-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(25, 135, 84, 0.9);
        color: white;
        padding: 5px 10px;
        border-radius: 30px;
        font-size: 12px;
        font-weight: 600;
    }

    .job-card .card-body {
        padding: 25px;
    }

    .card-title {
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 15px;
        color: #2575fc;
    }

    .info-row {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
        color: #6c757d;
    }

    .info-row i {
        width: 20px;
        margin-right: 10px;
        color: #6a11cb;
    }

    .view-btn {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        border: none;
        border-radius: 50px;
        padding: 10px 25px;
        transition: all 0.3s ease;
        font-weight: 600;
        display: inline-block;
        margin-top: 10px;
    }

    .view-btn:hover {
        box-shadow: 0 5px 15px rgba(37, 117, 252, 0.4);
        transform: translateY(-2px);
        color: white;
    }

    .description-box {
        height: 60px;
        overflow: hidden;
        margin-bottom: 15px;
        position: relative;
    }

    .description-box::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        height: 40%;
        width: 100%;
        background: linear-gradient(transparent, white);
    }

    .search-box {
        background: white;
        border-radius: 50px;
        padding: 5px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        margin: 20px auto 40px;
        max-width: 600px;
        display: flex;
    }

    .search-box input {
        border: none;
        padding: 10px 20px;
        flex: 1;
        border-radius: 50px;
    }

    .search-box input:focus {
        outline: none;
    }

    .search-btn {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        border: none;
        border-radius: 50px;
        padding: 10px 25px;
        font-weight: 600;
    }

    .search-btn:hover {
        box-shadow: 0 5px 15px rgba(37, 117, 252, 0.4);
    }

    .pagination .page-link {
        border-radius: 50px;
        margin: 0 5px;
        border: none;
        color: #6a11cb;
        width: 40px;
        height: 40px;
        text-align: center;
        line-height: 24px;
    }

    .pagination .page-item.active .page-link {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        box-shadow: 0 5px 10px rgba(37, 117, 252, 0.3);
    }

    /* Animation */
    .fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }

    @* Sửa cú pháp keyframes trong Razor *@
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<!-- Hero Section -->
<div class="job-title-section text-center fade-in">
    <h1 class="fw-bold mb-2">Danh sách công việc tuyển dụng</h1>
    <p class="lead">Khám phá cơ hội nghề nghiệp phù hợp với bạn</p>
    
    <div class="search-box">
        <input type="text" placeholder="Tìm kiếm công việc...">
        <button class="search-btn">
            <i class="bi bi-search"></i> Tìm kiếm
        </button>
    </div>
</div>

<div class="container mb-5">
    <!-- Filter Tags (Optional) -->
    <div class="d-flex flex-wrap gap-2 mb-4 justify-content-center fade-in" style="animation-delay: 0.2s;">
        <button class="btn btn-sm btn-light rounded-pill px-3 shadow-sm">Tất cả</button>
        <button class="btn btn-sm btn-light rounded-pill px-3 shadow-sm">IT & Phần mềm</button>
        <button class="btn btn-sm btn-light rounded-pill px-3 shadow-sm">Marketing</button>
        <button class="btn btn-sm btn-light rounded-pill px-3 shadow-sm">Tài chính</button>
        <button class="btn btn-sm btn-light rounded-pill px-3 shadow-sm">Thiết kế</button>
    </div>
    <a class="btn btn-info" href="/Home/PhanTichCV?fileName=2V.pdf">
        Phân tích CV bằng AI
    </a>
    <!-- Job Cards -->
    <div class="row g-4">
        @{int delay = 3;}
        @foreach (var cv in Model)
        {
            <div class="col-lg-6 mb-4 fade-in" style="animation-delay: 0.@(delay)s">
                @{delay = delay >= 9 ? 3 : delay + 1;}
                <div class="job-card">
                    <div class="card-body position-relative">
                        <span class="card-badge">Mới</span>
                        <h5 class="card-title">@cv.TenCongViec</h5>
                        
                        <div class="info-row">
                            <i class="bi bi-geo-alt-fill"></i>
                            <span>@cv.DiaDiemThoiGian</span>
                        </div>
                        
                        <div class="info-row">
                            <i class="bi bi-cash-coin"></i>
                            <span>@cv.MucLuong</span>
                        </div>
                        
                        <div class="info-row">
                            <i class="bi bi-briefcase-fill"></i>
                            <span>@cv.KinhNghiem năm kinh nghiệm</span>
                        </div>
                        
                        <div class="description-box">
                            <p class="mb-0">@cv.MoTaCongViec</p>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("DetailJob", "Home", new { id = cv.Id })" class="view-btn text-decoration-none">
                                Xem chi tiết
                            </a>
                            <button class="btn btn-light rounded-circle" style="width: 40px; height: 40px;" data-bs-toggle="tooltip" title="Lưu công việc">
                                <i class="bi bi-bookmark"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Bootstrap Icons CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">

<!-- Initialize tooltips -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>