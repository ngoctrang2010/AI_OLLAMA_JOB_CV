@model AI_OLLAMA_CV_JOB.Models.ChatModel

@{
    ViewBag.Title = "Chatbot AI";
}

<h2>Chatbot AI (Ollama)</h2>

@using (Html.BeginForm("Ask", "Chat", FormMethod.Post))
{
    <div>
        <label for="Question">Nhập câu hỏi:</label><br />
        @Html.TextAreaFor(m => m.Question, new { rows = 4, cols = 80, @class = "form-control" })
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Gửi</button>
}

@if (!string.IsNullOrEmpty(Model.Answer))
{
    <hr />
    <h4><strong>Câu hỏi của bạn:</strong></h4>
    <p>@Model.Question</p>

    <h4><strong>Trả lời từ AI:</strong></h4>
    <div style="white-space: pre-wrap; background: #f5f5f5; padding: 10px; border-radius: 5px;">
        @Model.Answer
    </div>
}
